<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%logger{0}] %msg%n%n</pattern>
		</encoder>
	</appender>

	<logger name="com.gordondickens" level="debug" />
