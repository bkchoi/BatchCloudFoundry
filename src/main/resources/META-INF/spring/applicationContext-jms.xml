<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:amq="http://activemq.apache.org/schema/core" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<amq:broker persistent="false" useJmx="true">
		<amq:transportConnectors>
			<amq:transportConnector uri="${activemq.connector.uri}" />
		</amq:transportConnectors>
	</amq:broker>

	<amq:connectionFactory brokerURL="${activemq.broker.url}"
		id="jmsFactory" />

	<amq:queue id="slaveRequestQueue" physicalName="${slave.request.queue}" />
	<amq:queue id="slaveResponseQueue" physicalName="${slave.response.queue}" />

</beans>
